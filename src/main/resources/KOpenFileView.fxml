<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.*?>
<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="edu.vstu.maria.ui.open_file.KOpenFileController">
    <VBox>
        <AnchorPane.topAnchor>0</AnchorPane.topAnchor>
        <AnchorPane.rightAnchor>0</AnchorPane.rightAnchor>
        <AnchorPane.bottomAnchor>0</AnchorPane.bottomAnchor>
        <AnchorPane.leftAnchor>0</AnchorPane.leftAnchor>
        <HBox>
            <TextField>
                <HBox.hgrow>ALWAYS</HBox.hgrow>
                <HBox.margin>
                    <Insets>
                        <top>5</top>
                        <right>5</right>
                        <bottom>5</bottom>
                        <left>5</left>
                    </Insets>
                </HBox.margin>
            </TextField>
            <Button>
                <text>Выбрать</text>
                <HBox.hgrow>NEVER</HBox.hgrow>
                <HBox.margin>
                    <Insets>
                        <top>5</top>
                        <right>5</right>
                        <bottom>5</bottom>
                        <left>5</left>
                    </Insets>
                </HBox.margin>
            </Button>
        </HBox>
        <HBox>
            <Label>
                <text>Разделитель</text>
                <HBox.margin>
                    <Insets>
                        <top>5</top>
                        <right>5</right>
                        <bottom>5</bottom>
                        <left>5</left>
                    </Insets>
                </HBox.margin>
            </Label>
            <ComboBox>
                <prefWidth>50</prefWidth>
                <minWidth>50</minWidth>
                <maxWidth>50</maxWidth>
                <HBox.margin>
                    <Insets>
                        <top>5</top>
                        <right>5</right>
                        <bottom>5</bottom>
                        <left>5</left>
                    </Insets>
                </HBox.margin>
            </ComboBox>
        </HBox>
    </VBox>
</AnchorPane>
